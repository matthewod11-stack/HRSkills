# HR Command Center - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ================================
# Required: AI Provider
# ================================
# At least ONE AI provider API key is required
ANTHROPIC_API_KEY=sk-ant-api03-xxx
# OPENAI_API_KEY=sk-xxx  # Optional fallback provider

# ================================
# Required: Authentication
# ================================
# JWT secret for token signing (must be at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# ================================
# Database
# ================================
# Default: ../data (relative to webapp directory)
DB_DIR=../data

# ================================
# Rippling Configuration (Optional)
# ================================
RIPPLING_API_KEY=rpl_your_key_here
RIPPLING_BASE_URL=https://api.rippling.com

# ================================
# Notion Configuration (Optional)
# ================================
NOTION_TOKEN=secret_your_token_here
NOTION_VERSION=2022-06-28
NOTION_ONBOARDING_DB=your_database_id_here
NOTION_HR_PROJECTS_DB=your_database_id_here

# ================================
# Google Workspace Configuration (Optional)
# ================================
# Service Account
GOOGLE_CREDENTIALS_PATH=/path/to/your/service-account-key.json
GOOGLE_ADMIN_EMAIL=admin@yourdomain.com
GOOGLE_DOMAIN=yourdomain.com
HR_DRIVE_FOLDER_ID=your_folder_id_here

# OAuth 2.0 Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# ================================
# Slack Configuration (Optional)
# ================================
SLACK_BOT_TOKEN=xoxb-your_token_here
SLACK_SIGNING_SECRET=your_signing_secret_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_WORKSPACE_ID=T...

# ================================
# Calendly Configuration (Optional)
# ================================
CALENDLY_API_KEY=your_api_key_here
CALENDLY_WEBHOOK_SECRET=your_webhook_secret_here
CALENDLY_DEFAULT_USER_URI=https://api.calendly.com/users/your_user_id

# ================================
# Application Configuration
# ================================
NEXT_PUBLIC_APP_NAME=HR Command Center
NODE_ENV=development
PORT=3000

# ================================
# Upstash Rate Limiting (Optional)
# ================================
# Feature flag: Set to 'true' to use Upstash Redis for distributed rate limiting
# Set to 'false' (or omit) to use in-memory rate limiting (default, recommended for local dev)
ENABLE_UPSTASH_RATE_LIMIT=false

# Upstash Redis credentials (only required if ENABLE_UPSTASH_RATE_LIMIT=true)
# Get these from: https://console.upstash.com/
# 1. Create account at Upstash
# 2. Create a Redis database (choose region closest to your deployment)
# 3. Go to database details → REST API tab
# 4. Copy UPSTASH_REDIS_REST_URL and UPSTASH_REDIS_REST_TOKEN
# UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token_here

# ================================
# Observability & Monitoring (Optional)
# ================================
# Sentry Error Tracking (recommended for production)
# Get these from: https://sentry.io/settings/
# 1. Sign up at https://sentry.io
# 2. Create a new Next.js project
# 3. Copy DSN from Settings → Client Keys (SDK Setup)
# 4. Add organization and project slugs from your Sentry URL
# 5. Generate auth token for source map uploads (Settings → Auth Tokens) - CI/CD only
SENTRY_DSN=                           # Public DSN for error reporting
SENTRY_ORG=foundryhr                  # Your Sentry organization slug
SENTRY_PROJECT=hrcommandcenter        # Your Sentry project name
SENTRY_AUTH_TOKEN=                    # Auth token for uploading source maps (CI/CD only)

# ================================
# Vercel Analytics (Optional)
# ================================
# Feature flags: Set to 'true' to enable Vercel Analytics and Speed Insights
# Recommended: false for local dev, true for staging/production (Vercel deployments)
# No API keys needed - auto-configured on Vercel platform
NEXT_PUBLIC_VERCEL_ANALYTICS_ENABLED=false
NEXT_PUBLIC_SPEED_INSIGHTS_ENABLED=false
