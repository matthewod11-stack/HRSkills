# ============================================
# Production Environment Configuration
# ============================================
# Store these values in your deployment platform's secrets manager:
# - GitHub Secrets (for GitHub Actions)
# - AWS Secrets Manager
# - Google Cloud Secret Manager
# - HashiCorp Vault
# - Kubernetes Secrets
#
# NEVER commit actual production values to version control!

# ================================
# Environment
# ================================
NODE_ENV=production
PORT=3000

# ================================
# Claude AI Configuration
# ================================
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# ================================
# Rippling Configuration
# ================================
RIPPLING_API_KEY=${RIPPLING_API_KEY}
RIPPLING_BASE_URL=https://api.rippling.com

# ================================
# Notion Configuration
# ================================
NOTION_TOKEN=${NOTION_TOKEN}
NOTION_VERSION=2022-06-28
NOTION_ONBOARDING_DB=${NOTION_ONBOARDING_DB}
NOTION_HR_PROJECTS_DB=${NOTION_HR_PROJECTS_DB}

# ================================
# Google Workspace Configuration
# ================================
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GOOGLE_CREDENTIALS_PATH=/app/credentials/google-credentials.json
GOOGLE_ADMIN_EMAIL=${GOOGLE_ADMIN_EMAIL}
GOOGLE_DOMAIN=${GOOGLE_DOMAIN}

# ================================
# Slack Configuration
# ================================
SLACK_BOT_TOKEN=${SLACK_BOT_TOKEN}
SLACK_SIGNING_SECRET=${SLACK_SIGNING_SECRET}
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
SLACK_WORKSPACE_ID=${SLACK_WORKSPACE_ID}

# ================================
# Calendly Configuration
# ================================
CALENDLY_API_KEY=${CALENDLY_API_KEY}
CALENDLY_WEBHOOK_SECRET=${CALENDLY_WEBHOOK_SECRET}
CALENDLY_DEFAULT_USER_URI=${CALENDLY_DEFAULT_USER_URI}

# ================================
# Database Configuration
# ================================
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}

# ================================
# Application Configuration
# ================================
NEXT_PUBLIC_APP_NAME=HR Command Center
NEXT_TELEMETRY_DISABLED=1

# ================================
# Monitoring & Observability
# ================================
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production
DATADOG_API_KEY=${DATADOG_API_KEY}

# ================================
# Feature Flags
# ================================
ENABLE_DEBUG_LOGGING=false
ENABLE_ANALYTICS=true

# ================================
# Security
# ================================
SESSION_SECRET=${SESSION_SECRET}
JWT_SECRET=${JWT_SECRET}
ALLOWED_ORIGINS=https://hrskills.yourcompany.com
