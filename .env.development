# ============================================
# Development Environment Configuration
# ============================================
# Copy this to .env.local for local development
# DO NOT commit .env.local to version control

# ================================
# Environment
# ================================
NODE_ENV=development
PORT=3000

# ================================
# Security Configuration
# ================================
# JWT Secret for authentication (minimum 32 characters)
# IMPORTANT: Change this in production!
JWT_SECRET=dev_secret_change_in_production_32_character_minimum_length_required

# CORS Configuration
ALLOWED_ORIGIN=http://localhost:3000

# ================================
# Claude AI Configuration
# ================================
ANTHROPIC_API_KEY=sk-ant-your_dev_key_here

# ================================
# Rippling Configuration
# ================================
RIPPLING_API_KEY=rpl_your_dev_key_here
RIPPLING_BASE_URL=https://api.rippling.com

# ================================
# Notion Configuration
# ================================
NOTION_TOKEN=secret_your_dev_token_here
NOTION_VERSION=2022-06-28
NOTION_ONBOARDING_DB=dev_database_id_here
NOTION_HR_PROJECTS_DB=dev_database_id_here

# ================================
# Google Workspace Configuration
# ================================
GOOGLE_CLIENT_ID=your_dev_client_id_here
GOOGLE_CLIENT_SECRET=your_dev_client_secret_here
GOOGLE_CREDENTIALS_PATH=./credentials/google-credentials-dev.json
GOOGLE_ADMIN_EMAIL=admin@yourcompany.com
GOOGLE_DOMAIN=yourcompany.com

# ================================
# Slack Configuration
# ================================
SLACK_BOT_TOKEN=xoxb-your_dev_token_here
SLACK_SIGNING_SECRET=your_dev_signing_secret_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/dev/webhook
SLACK_WORKSPACE_ID=T...

# ================================
# Calendly Configuration
# ================================
CALENDLY_API_KEY=your_dev_api_key_here
CALENDLY_WEBHOOK_SECRET=your_dev_webhook_secret_here
CALENDLY_DEFAULT_USER_URI=https://api.calendly.com/users/your_dev_user_id

# ================================
# Database Configuration (for future use)
# ================================
DATABASE_URL=postgresql://hrskills_user:password@localhost:5432/hrskills_dev
REDIS_URL=redis://localhost:6379

# ================================
# Application Configuration
# ================================
NEXT_PUBLIC_APP_NAME=HR Command Center (Dev)
NEXT_TELEMETRY_DISABLED=0

# ================================
# Feature Flags
# ================================
ENABLE_DEBUG_LOGGING=true
ENABLE_ANALYTICS=false
